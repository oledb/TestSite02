@model LoginViewModel
<div class="my-form-main">
    <form asp-controller="Account"
          asp-action="Login"
          asp-route-returnurl="@ViewData["ReturnUrl"]"
          method="post" class="w3-container">
        <h1>Вход</h1>
        <p>
            <label asp-for="Email">Почта</label>
            <input asp-for="Email" class="w3-input w3-border w3-border-orange" type="email">
            <span asp-validation-for="Email" class="w3-text-red"></span>
        </p>
        <p>
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" class="w3-input w3-border w3-border-orange" type="password">
            <span asp-validation-for="Password" class="w3-text-red"></span>
        </p>
        <p><input asp-for="RememberMe" class="w3-check" type="checkbox"> Запомнить?</input></p>
        <div>
            <input class="w3-button w3-red" type="submit" value="Войти">
            <div class="my-form-linkbox">
                <a asp-controller="Account" asp-action="ForgotPassword" 
                   style="display: block">Я забыл пароль</a>
                <a asp-controller="Account" asp-action="Registry">У меня нет учетной записи</a>
            </div>
        </div>
@if (ViewBag?.isFailedLogin)
{
    <p class="w3-text-red w3-section">Неправильные логин и\или пароль!</p>
}
    </form>
</div>

@await Html.PartialAsync("_ValidationScript")